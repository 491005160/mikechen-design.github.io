<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <!-- 自动适配手机 -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>开发者作品集</title>
    <style>
        :root { --primary-color: #2ecc71; } /* 主色调 */
        .project-card {
            border: 1px solid #eee;
            padding: 1rem;
            margin: 1rem;
            transition: transform 0.3s;
        }
        .project-card:hover {
            transform: translateY(-5px);
        }
    </style>
</head>
<body>
    <header>
        <h1>我的代码作品</h1>
        <nav>
            <a href="#projects">项目</a>
            <a href="https://github.com/你的账号">GitHub</a>
        </nav>
    </header>

    <section id="projects">
        <!-- 项目列表自动生成 -->
        <div id="project-list"></div>
    </section>

    <script>
        // 自动加载项目数据
        fetch('./projects/projects.json')
            .then(response => response.json())
            .then(data => {
                const container = document.getElementById('project-list');
                data.forEach(project => {
                    container.innerHTML += `
                        <div class="project-card">
                            <h3>${project.title}</h3>
                            <p>${project.description}</p>
                            <a href="${project.url}" target="_blank">查看代码</a>
                        </div>
                    `;
                });
            });
    </script>
</body>
</html>
